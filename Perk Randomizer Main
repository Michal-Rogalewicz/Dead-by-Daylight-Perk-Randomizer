def title():
    print(Fore.CYAN + Style.BRIGHT + "\nDEAD BY DAYLIGHT - PERK RANDOMIZER\n")

def get_build():
    build = random.sample(survivor_perks, 4)
    return build

def print_build(build):
    print(Fore.WHITE + Style.BRIGHT + "\nYour Perk Build: ")
    for perk in build:
        print(Fore.BLUE + Style.BRIGHT + "- " + perk)

def main():
    while True:
            start = input(Fore.WHITE + Style.BRIGHT + "R to reroll, Q to quit: ").lower().strip()
            if start == "r":
                build = get_build()
                print_build(build)
            elif start == "q":
                print(Fore.WHITE + Style.BRIGHT + "Goodbye")
                break
            else:
                print(Fore.WHITE + Style.BRIGHT + "Try again. \n")

title()
main()

